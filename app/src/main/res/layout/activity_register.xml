<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@drawable/background_register"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welder \nNotes"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold"
                android:lineHeight="30dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="1"/>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukan Nama Anda"
            android:textSize="15sp"
            android:textStyle=""
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nama anda"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:letterSpacing="0"
            android:background="@drawable/rectangle4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukan email"
            android:textSize="15sp"
            android:textStyle=""
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your_email@example.com"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:letterSpacing="0"
            android:inputType="textEmailAddress"
            android:background="@drawable/rectangle4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukan pin aplikasi"
            android:textSize="15sp"
            android:textStyle=""
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/input_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:hint="******"
            android:letterSpacing="1"
            android:background="@drawable/rectangle4"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:digits="0123456789" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ulangi pin anda"
            android:textSize="15sp"
            android:textStyle=""
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/input_pin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:hint="******"
            android:letterSpacing="1"
            android:background="@drawable/rectangle4"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:digits="0123456789" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                app:cornerRadius="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:backgroundTint="@color/ungu_1"
                />

            <TextView
                android:id="@+id/link_login"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Kembali ke Login"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:textColor="@color/ungu_2"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>