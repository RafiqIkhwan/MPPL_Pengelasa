<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:id="@+id/wadah"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        >
        <TextView
            android:id="@+id/text_name_cus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Nanti kita cerita hari ini"
            android:textAlignment="textStart"

            />

        <TextView
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Phone Number"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/text_phone_cus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="+629879879"
            android:paddingStart="10dp"
            />
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Address"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Alamat lengkap saya"
            android:paddingStart="10dp"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/icon_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconedit"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_delete"
        app:layout_constraintBottom_toBottomOf="@+id/wadah"
        />
    <ImageView
        android:id="@+id/icon_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icontrashgif"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/wadah"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/slate_800"
        app:layout_constraintTop_toBottomOf="@+id/wadah"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12px"
        />
</androidx.constraintlayout.widget.ConstraintLayout>